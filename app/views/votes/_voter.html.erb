
  <div class="vote-arrows pull-left">
    <div><%= link_to " ", 
      topic_post_up_vote_path(topic, post), 
      class: "fa fa-angle-up #{(current_user.voted(post) && current_user.voted(post).up_vote?) ? 'voted' : '' }" %>
    </div>
    <strong><%= post.points %></strong>
    <div><%= link_to " ", 
      topic_post_down_vote_path(topic, post), 
      class: "fa fa-angle-down #{(current_user.voted(post) && current_user.voted(post).down_vote?) ? 'voted' : '' }" %>
    </div>
  </div>
