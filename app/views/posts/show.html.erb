<h1><%= markdown @post.title %></h1>

<div class="row">
  <div class="span8">
    <small>
      <%= image_tag(@post.user.avatar.tiny.url, class: "img-circle") if @post.user.avatar? %>
      submitted <%= time_ago_in_words(@post.created_at) %> ago by
      <%= @post.user.name %>
    </small>
    <p><%= markdown @post.body %></p>
  </div>
   <div class="span8">
      <%= image_tag(@post.image.thumb.url) if @post.image? %>
  </div>
  <div class="span4">
    <% if can? :edit, @comment %>
      <%= render partial: "comments/form", locals: {topic: @topic, post: @post, comment: @comment} %>
    <% end %>
    <% if can? :destroy, @post %>
      <%= link_to "Delete Post", [@topic, @post], method: :delete, class: 'btn btn-large btn-block btn-danger', confirm: 'Are you sure you want to delete this post?' %>
      <% end %>
  </div>
  <div class="row">
    <div class="span8">
      <h2>Comments</h2>
      <%= render partial: "comments/comment", collection:@comments %>
    </div>
  </div>
  <%= render @comments %>
</div>